lazyvim() {
	docker run -w /root -it --rm alpine:edge sh -uelic '
		apk add git lazygit fzf curl neovim ripgrep alpine-sdk --update
		git clone https://github.com/LazyVim/starter ~/.config/nvim
		cd ~/.config/nvim
		sh
	'
}
alias cd='pushd > /dev/null'
alias p='popd'
alias ..='pushd ..'
alias ...='pushd ../..'
alias ....='pushd ../../..'

if command -v eza &>/dev/null; then
	alias l='eza -1 --classify'
	alias lr='eza -1 -R --classify'
	alias lt='eza -1 -T --classify'
	alias la='eza -1 -a --classify'
	alias lar='eza -1 -a -R --classify'
	alias lat='eza -1 -a -T --classify'
	alias ll='eza -l --classify'
	alias llr='eza -l -R --classify'
	alias llt='eza -l -T --classify'
	alias lla='eza -l -a --classify'
	alias llar='eza -l -a -R --classify'
	alias llat='eza -l -a -T --classify'
else
	alias l='ls -1FG'
	alias lr='ls -1FGR'
	alias la='ls -1AFG'
	alias lar='ls -1AFGR'
	alias ll='ls -lFG'
	alias llr='ls -lFGR'
	alias lla='ls -lAFG'
	alias llar='ls -lAFGR'
fi

alias dev-up="devcontainer up \
	--additional-features \"\$(devcontainer-features-menu)\" \
	--dotfiles-repository https://github.com/LowEntropyEntity/.dotfiles.git \
	--dotfiles-target-path="~/.dotfiles" \
	--dotfiles-install-command ".local/bin/install-dotfiles" \
	--workspace-folder ."
alias dev-play="devcontainer up \
	--additional-features \"\$(devcontainer-features-menu)\" \
	--workspace-folder . \
	--mount type=bind,source=/home/sean/.config/nvim/,target=/home/node/.config/nvim/"
alias dev-clean='dev-up --remove-existing-container --build-no-cache'
dev() {
	old_title=$(tmux display-message -p "#{pane_title}")
	old_name=$(tmux display-message -p "#{window_name}")
	target_window=$(tmux display-message -p "#{session_id}:#{window_id}")
	target_pane=$(tmux display-message -p "#{session_id}:#{window_id}.#{pane_id}")
	tmux rename-window "[$(basename $PWD)] ${old_name}"

	devcontainer exec --remote-env DEV_CONTAINER=1 --workspace-folder . $@

	tmux rename-window -t "$target_window" "$old_name"
	tmux select-pane -t "$target_pane" -T "$old_title"
}
alias dev-down='docker rm -f $(docker ps -aq --filter "label=devcontainer.local_folder=$PWD")'
alias dev-ls='docker container ls -a --filter "label=devcontainer.metadata" --format json | fix-docker-container-formatting | filter-docker-devcontainer-output'

### dotfiles and git
alias dot-sync='dot pull --rebase --autostash && dot reset -- $HOME && dot ls-files --deleted -z | xargs -0 git --git-dir=$DOTFILES_GIT_DIR --work-tree=$DOTFILES_WORK_TREE checkout && echo "dotfiles synced successfully"'
[[ -z "$DEV_CONTAINER" ]] && alias git='$HOME/.local/bin/dotfiles-git/git'
alias lzg='lazygit'

### networking
alias lsports='ss -tulpn'

### datetime
alias now='date +"%F %T"'

### clipboard/sharing
alias share-dir='(tree -a; echo; find . -type f | while read f; do echo "===== $f ====="; cat "$f"; echo; done) | wl-copy'
alias share-dir-ln='(tree -a; echo; find . -type f | while read f; do echo "===== $f ====="; cat --number "$f"; echo; done) | wl-copy'
alias share-dir-git='(git ls-tree -r --name-only HEAD; echo; git ls-tree -r --name-only HEAD | while read f; do echo "===== $f ====="; cat "$f"; echo; done) | wl-copy'

